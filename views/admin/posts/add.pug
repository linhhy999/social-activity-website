extends ../layout

block content
  .breadcomb-area
    .container
      .row
        .col-lg-12.col-md-12.col-sm-12.col-xs-12
          .breadcomb-list
            .row
              .col-lg-6.col-md-6.col-sm-6.col-xs-12
                .breadcomb-wp
                  .breadcomb-icon
                    i.notika-icon.notika-form
                  .breadcomb-ctn
                    h2 Thêm bài viết
                    p
                      | Bài đăng > Thêm bài viết
  .form-element-area
    .container
      .row
        .col-lg-12.col-md-12.col-sm-12.col-xs-12
          .form-element-list

            form(action="#")
              
              <!-- Activity name -->
              .form-group.ic-cmp-int.float-lb.floating-lb
                .form-ic-cmp
                  i.notika-icon.notika-support
                .nk-int-st
                  input.form-control.input-lg(type='text' name='activityName')
                  label.nk-label Tên Hoạt động
              
              <!-- Processing Time -->
              .row
                .col-sm-6
                  .form-group.ic-cmp-int.float-lb.floating-lb
                    .form-ic-cmp
                      i.notika-icon.notika-calendar
                    .nk-int-st
                      #data_1.form-group.nk-datapk-ctm.form-elet-mg
                        label Ngày bắt đầu
                        .input-group.date.nk-int-st
                          span.input-group-addon
                          input.form-control(type='text' value='dd/mm/yyyy' name='startDate')
                .col-sm-6
                  .form-group.ic-cmp-int.float-lb.floating-lb
                    .form-ic-cmp
                      i.notika-icon.notika-calendar
                    .nk-int-st
                      #data_1.form-group.nk-datapk-ctm.form-elet-mg
                        label Ngày kết thúc
                        .input-group.date.nk-int-st
                          span.input-group-addon
                          input.form-control(type='text' value='dd/mm/yyyy' name='endDate')
              
              <!-- Start Location -->
              .row
                .col-sm-6
                  .form-group.ic-cmp-int.float-lb.floating-lb
                    .form-ic-cmp
                      i.notika-icon.notika-map
                    .nk-int-st
                      input.form-control.input-lg(type='text' name='location1')
                      label.nk-label Địa điểm nhận công việc

                .col-sm-6
                  .form-group.ic-cmp-int.float-lb.floating-lb
                    .form-ic-cmp
                      i.notika-icon.notika-map
                    .nk-int-st
                      input.form-control.input-lg(type='text' name='location2')
                      label.nk-label Địa điểm di chuyển đến (nếu có)

              <!-- Benefit -->
              .form-group.ic-cmp-int.float-lb.floating-lb
                .form-ic-cmp
                  i.notika-icon.notika-star
                .nk-int-st
                  input.form-control(type='text' data-mask='99.9')
                  label.nk-label Quyền lợi sẽ được hưởng

              <!-- Number of volunteers -->
              .form-group.ic-cmp-int.float-lb.floating-lb
                .form-ic-cmp
                  i.notika-icon.notika-star
                .nk-int-st
                  input.form-control(type='text' data-mask='9999')
                  label.nk-label Số lượng tình nguyện viên cần tuyển

              <!-- Description -->

              <!-- Content -->
              .form-group.ic-cmp-int.float-lb.floating-lb
                .form-ic-cmp
                .nk-int-st
                  h4 Nội dung hoạt động
                  <textarea name="editor1"></textarea>

            <!-- Video -->
            .dropdone-nk.mg-t-30
              .cmp-tb-hd
                h2 Video
                p
                  | Video mô tả hoạt động (nếu có)
              #dropzone1.multi-uploader-cs.text-center
                form#demo1-upload.dropzone.dropzone-nk.needsclick.dz-clickable(action='/upload').p-5
                  .dz-message.needsclick.download-custom
                    i.notika-icon.notika-cloud
                    h2 Drop files here or click to upload.
                    p
                      span.note.needsclick
                        | (This is just a demo dropzone. Selected files are 
                        strong not
                        |  actually uploaded.)

            <!-- Image -->
            .dropdone-nk.mg-t-30
              .cmp-tb-hd
                h2 Hình ảnh
                p
                  | Hình ảnh mô tả hoạt động (nếu có)
              #dropzone1.multi-uploader-cs.text-center
                form#demo1-upload.dropzone.dropzone-nk.needsclick.dz-clickable(action='/upload')
                  .dz-message.needsclick.download-custom
                    i.notika-icon.notika-cloud
                    h2 Drop files here or click to upload.
                    p
                      span.note.needsclick
                        | (This is just a demo dropzone. Selected files are 
                        strong not
                        |  actually uploaded.)

            <!-- Button -->
            .btn-list.float-right
                button.btn.btn-success.notika-btn-success.mr-3
                  | Hoàn tất
                button.btn.btn-danger.notika-btn-danger.waves-effect
                  | Hủy


           
