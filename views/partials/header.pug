nav.navbar.navbar-expand-sm.navbar-dark.fixed-top
    .container
        a.navbar-brand(href="/") 
            img(src="/img/hcmut.png", alt="hcmut.png")
        button.navbar-toggler.d-lg-none(type="button" data-toggle="collapse" data-target="#collapsibleNavId" aria-controls="collapsibleNavId"
            aria-expanded="false" aria-label="Toggle navigation")
        .collapse.navbar-collapse#collapsibleNavId
            ul.navbar-nav.mr-auto.mt-2.mt-lg-0
                li.nav-item.active
                    form.form-inline.form-round(action="/search" method="GET")
                        input(type="text" placeholder="Search" aria-label="Search" name="keyword")
                        button(type="button").btn.btn-rounded.btn-primary.btn-sm.btn-search
                            i.fas.fa-search.pr-2(aria-hidden="true") 
            ul.navbar-nav
                li.nav-item
                    a.nav-link(href="#")
                        i.fas.fa-bell
                li.nav-item.dropdown
                    a.nav-link.dropdown-toggle#dropdownId(href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") 
                        i.fas.fa-user
                    .dropdown-menu(aria-labelledby="dropdownId")
                        a.dropdown-item(href="/profile") Profile
                        a.dropdown-item(href="/logout") Logout